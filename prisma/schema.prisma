generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                  Int                  @id @default(autoincrement())
  name                String
  email               String               @unique
  password            String
  createdAt           DateTime             @default(now())
  constantMedidor     Int?
  ruralZone           Boolean              @default(false)
  whiteFare           Boolean              @default(false)

  address             Address?

  energyYears         EnergyYear[]
  domesticEquipaments DomesticEquipament[]
}

model Address {
  id         Int     @id @default(autoincrement())
  state      String  @db.Char(2)
  city       String
  zipCode    String  @db.VarChar(9)
  district   String
  street     String
  number     String
  complement String?

  user       User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId     Int     @unique
}

model DomesticEquipament {
  id         Int      @id @default(autoincrement())
  name       String
  model      String?
  consumeKwh Float
  active     Boolean?

  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId     Int
}

model EnergyYear {
  id         Int           @id @default(autoincrement())
  year       Int
  expenseKwh Float?
  account    Float?
  pulse      Int?

  user       User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId     Int

  months     EnergyMonth[]

  @@unique([userId, year])
}

model EnergyMonth {
  id         Int    @id @default(autoincrement())
  month      Int
  expenseKwh Float?
  account    Float?
  pulse      Int?

  year       EnergyYear @relation(fields: [yearId], references: [id], onDelete: Cascade)
  yearId     Int

  days       EnergyDay[]

  @@unique([yearId, month])
}

model EnergyDay {
  id         Int          @id @default(autoincrement())
  day        Int
  expenseKwh Float?
  account    Float?
  pulse      Int?

  month      EnergyMonth  @relation(fields: [monthId], references: [id], onDelete: Cascade)
  monthId    Int

  hours      EnergyHour[]

  @@unique([monthId, day])
}

model EnergyHour {
  id         Int       @id @default(autoincrement())
  hour       Int
  expenseKwh Float?
  account    Float?
  pulse      Int?

  day        EnergyDay @relation(fields: [dayId], references: [id], onDelete: Cascade)
  dayId      Int

  @@unique([dayId, hour])
}

model EnergyDistributor {
  id    Int    @id @default(autoincrement())
  code  String
  name  String
  state String @db.Char(2)
  city  String
}